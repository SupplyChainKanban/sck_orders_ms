generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  BACKLOG
  TO_BUY
  IN_BUYING_PROCESS
  BOUGHT
  DISMISSED
}

model Orders {
  id            String @id @default(uuid())
  materialID    String
  orderQuantity Float
  predictedDate DateTime

  status        OrderStatus
  predicionID   String
  realQuantity  Float
  purchaseDate  DateTime?

  orderDate     DateTime @default(now())
  updatedAt     DateTime @updatedAt

}